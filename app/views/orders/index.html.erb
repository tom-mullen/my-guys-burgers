<% content_for :title, "Orders" %>

<%= tag.div class: "w-full py-20" do %>
  <%= tag.div class: "flex justify-between items-start" do %>
    <%= tag.h1 "Orders", class: "font-bold text-white text-4xl mb-6" %>
    <%= link_to "New order", new_order_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  <% end %>

  <%= tag.div id: "orders", class: "min-w-full divide-y divide-gray-200 space-y-5" do %>
    <% if @orders.any? %>
      <%= render @orders %>
    <% else %>
      <%= tag.p "No orders found.", class: "text-center my-10" %>
    <% end %>
  <% end %>
<% end %>
