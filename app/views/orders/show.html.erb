<% content_for :title, "Showing order" %>

<%= tag.div class: "md:w-2/3 w-full" do %>
  <% if notice.present? %>
    <%= tag.p notice, class: "py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block", id: "notice" %>
  <% end %>

  <%= tag.h1 "#Order #{@order.id}", class: "font-bold text-6xl text-white mb-16" %>

  <%= render @order %>

  <%= tag.div(class: "mt-20") do %>
    <%= link_to "Back to orders", orders_path, class: "w-full sm:w-auto text-center mt-2 sm:mt-0 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <% end %>
<% end %>
