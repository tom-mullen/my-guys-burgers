<% content_for :title, "Showing order" %>

<%= tag.div(class: "flex flex-col gap-6") do %>
  <% if notice.present? %>
    <%= tag.p notice, class: "py-2 px-3 bg-green-50 text-green-500 font-medium rounded-md inline-block", id: "notice" %>
  <% end %>

  <%= render partial: "orders/order", locals: { order: @order } %>

  <%= tag.div do %>
    <%= link_to "Back to orders", joint_orders_path(@joint), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
  <% end %>
<% end %>
