<%= render "layouts/joint_name", locals: { joint: @joint } %>

<%= tag.div(class: "place-items-center gap-2") do %>
  <%= tag.div(class: "self-center grid place-items-center") do %>
    <%= tag.h1("My Guys", class: "text-center text-white text-6xl md:text-9xl") %>
    <%= tag.h2("Burgers & Fries", class: "text-white text-3xl") %>

    <%= tag.div(class: "self-center flex gap-6 mt-20") do %>
      <%= link_to("Order Now", new_joint_order_path(@joint), class: "bg-white text-red rounded-lg p-6 border-1 border-white hover:bg-red hover:text-white") %>
      <%= link_to("To the Kitchen!", joint_kitchen_orders_path(@joint), class: "bg-red text-white rounded-lg p-6 border-1 border-white hover:bg-white hover:text-red") %>
    <% end %>
  <% end %>
<% end %>

